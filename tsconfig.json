{
  "compilerOptions": {
    "incremental": false,
    "module": "commonjs",
    "noImplicitReturns": false,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "noImplicitAny": false,
    "removeComments": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "sourceMap": false,
    "outDir": "dist/",
    "pretty": true,
    "baseUrl": ".",
    "alwaysStrict": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "traceResolution": false,
    "types": ["node"]
  },
  "compileOnSave": true,
  "include": ["src/**/*"],
  "exclude": [".git", "node_modules", "logs", "dist"]
}
